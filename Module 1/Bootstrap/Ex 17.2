<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Icon-Only Buttons</title>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="css/bootstrap.min.css" />

  <!-- Bootstrap Icons CDN -->
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
  />
</head>
<body>

  <div class="container py-5 text-center">

    <h2 class="mb-4">Icon-Only Buttons</h2>

    <button type="button" class="btn btn-primary me-2" aria-label="Save">
      <i class="bi bi-save"></i>
    </button>

    <button type="button" class="btn btn-success me-2" aria-label="Check">
      <i class="bi bi-check-lg"></i>
    </button>

    <button type="button" class="btn btn-danger me-2" aria-label="Delete">
      <i class="bi bi-trash"></i>
    </button>

    <button type="button" class="btn btn-warning" aria-label="Warning">
      <i class="bi bi-exclamation-triangle"></i>
    </button>

  </div>

  <script src="js/bootstrap.bundle.min.js"></script>
</body>
</html>
