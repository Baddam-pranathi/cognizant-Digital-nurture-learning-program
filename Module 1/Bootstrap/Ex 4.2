<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Four Column Layout</title>
  <!-- Link to Bootstrap CSS -->
  <link rel="stylesheet" href="css/bootstrap.min.css">
</head>
<body>

  <div class="container mt-5">
    <div class="row">
      
      <div class="col-12 col-sm-3 mb-3">
        <div class="p-3 bg-primary text-white text-center rounded">Column 1</div>
      </div>

      <div class="col-12 col-sm-3 mb-3">
        <div class="p-3 bg-success text-white text-center rounded">Column 2</div>
      </div>

      <div class="col-12 col-sm-3 mb-3">
        <div class="p-3 bg-warning text-dark text-center rounded">Column 3</div>
      </div>

      <div class="col-12 col-sm-3 mb-3">
        <div class="p-3 bg-danger text-white text-center rounded">Column 4</div>
      </div>

    </div>
  </div>

  <!-- Link to Bootstrap JS Bundle -->
  <script src="js/bootstrap.bundle.min.js"></script>
</body>
</html>
